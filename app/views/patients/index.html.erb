  </thead>

  <tbody>

    <% @patients.each do |patient| %>
    <tr>
      <td width='10%'><%= link_to patient.first_name, new_patient_question_path(patient)%></td>
      <td width='10%'><%= patient.last_name %></td>
      <td width='10%'><%= patient.date_of_birth %></td>
      <td width='10%'><%= patient.gender %></td>
      <td width='10%'><%= patient.reason_for_visit %></td>
      <td width='10%'><%= patient.insurance %></td>
      <td width='10%'><%= patient.policy_number %></td>
      <td width='10%'><%= patient.telephone %></td>
      <td width='10%'><%= patient.address %></td>
      <td width='10%'><%= patient.email %></td>
      <td width='10%'><%= link_to 'Show', patient %></td>
      <td width='10%'><%= link_to 'Edit', edit_patient_path(patient) %></td>
      <td width='10%'><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
